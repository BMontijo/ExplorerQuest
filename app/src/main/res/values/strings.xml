    <!-- Story element 1 - CHARACTER LIMIT - 130 -->
    <string name="story_intro_1"><xliff:g id="hero" example="Boots">%s</xliff:g> discovers that the pie that Abuela baked for dinner has gone missing.</string>

    <!-- Story element 2 - CHARACTER LIMIT - 130 -->
    <string name="story_intro_2"><xliff:g id="hero" example="Boots">%s</xliff:g> calls on <xliff:g id="enemy" example="Map">%s</xliff:g> to find out where to go.</string>

    <!-- Story element 3 - CHARACTER LIMIT - 130 -->
    <string name="story_intro_3"><xliff:g id="enemy" example="Map">%s</xliff:g> is suspiciously hesitant to guide <xliff:g id="hero" example="Boots">%s</xliff:g>.\n\nFrustrated <xliff:g id="hero" example="Boots">%s</xliff:g> threatens <xliff:g id="enemy" example="Map">%s</xliff:g>!</string>

    <!-- Story element 4 - CHARACTER LIMIT - 130 -->
    <string name="story_adventure_1">After defeating <xliff:g id="enemy" example="Map">%s</xliff:g>, <xliff:g id="hero" example="Boots">%s</xliff:g> finds out that <xliff:g id="enemy" example="Grumpy">%s</xliff:g> might be involved.\n\nSo <xliff:g id="hero" example="Boots">%s</xliff:g> heads to the bridge.</string>

    <!-- Story element 5 - CHARACTER LIMIT - 130 -->
    <string name="story_adventure_2"><xliff:g id="enemy" example="Grumpy">%s</xliff:g> denies knowing anything about a pie.</string>

    <!-- Story element 6 - CHARACTER LIMIT - 130 -->
    <string name="story_adventure_3"><xliff:g id="hero" example="Boots">%s</xliff:g> knows that <xliff:g id="enemy" example="Grumpy">%s</xliff:g> is usually difficult to deal with.\n\n<xliff:g id="hero" example="Boots">%s</xliff:g> threatens <xliff:g id="enemy" example="Grumpy">%s</xliff:g>!</string>

    <!-- Story element 7 - CHARACTER LIMIT - 130 -->
    <string name="story_finale_1">Defeated, <xliff:g id="enemy" example="Grumpy">%s</xliff:g>, lets slip that <xliff:g id="enemy" example="Swiper">%s</xliff:g> is behind the shenanigans.</string>

    <!-- Story element 8 - CHARACTER LIMIT - 130 -->
    <string name="story_finale_2"><xliff:g id="hero" example="Boots">%s</xliff:g> heads out towards <xliff:g id="enemy" example="Swiper">%s</xliff:g>\'s den.</string>

    <!-- Story element 9 - CHARACTER LIMIT - 130 -->
    <string name="story_finale_3"><xliff:g id="hero" example="Boots">%s</xliff:g> surprises <xliff:g id="enemy" example="Swiper">%s</xliff:g> with pie in hand.\n\n<xliff:g id="hero" example="Boots">%s</xliff:g> threatens <xliff:g id="enemy" example="Swiper">%s</xliff:g>!</string>
    
    <!-- Story element 10 - CHARACTER LIMIT - 130 -->
    <string name="story_ending"><xliff:g id="hero" example="Boots">%s</xliff:g> looms over the battered remains of <xliff:g id="enemy" example="Swiper">%s</xliff:g>.\n\n"Nobody messes with Abuela's pie." says <xliff:g id="hero" example="Boots">%s</xliff:g>.</string>

